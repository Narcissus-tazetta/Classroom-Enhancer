{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "ES2017", "ES2015", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false,
        "noEmit": true,
        "types": ["chrome", "webextension-polyfill"]
    },
    "include": ["entrypoints/**/*"],
    "exclude": ["node_modules", "dist"]
}
