{
    "name": "classroom-enhancer",
    "version": "1.1.3",
    "description": "Google ClassroomのUIの改善します",
    "private": true,
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "build": "rm -rf dist .output && wxt build && wxt build -b firefox && node scripts/fix-output.js",
        "build:chrome": "wxt build && node scripts/fix-output.js",
        "build:firefox": "wxt build -b firefox && node scripts/fix-output.js",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "clean": "rm -rf dist .output",
        "tsc": "tsc --noEmit",
        "test": "bun test tests/",
        "test:watch": "bun test --watch tests/",
        "test:fix-output": "node scripts/test-fix-output.js",
        "lint": "oxlint entrypoints workers wxt.config.ts && dprint fmt && dprint check",
        "lint:fix": "oxlint --fix entrypoints workers wxt.config.ts",
        "check": "bun run tsc && bun run test && bun run lint"
    },
    "dependencies": {
        "wanakana": "^5.3.1",
        "webextension-polyfill": "^0.12.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/chrome": "^0.1.36",
        "@types/webextension-polyfill": "^0.10.7",
        "dprint": "^0.51.1",
        "oxlint": "^1.46.0",
        "typescript": "^5.9.3",
        "wxt": "^0.20.13"
    }
}
